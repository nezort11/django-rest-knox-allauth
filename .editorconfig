# EditorConfig is awesome: https://EditorConfig.org
# I don't use editorconfig (VS Code settings.json) but for collaboration it is awesome

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{html,css,scss,js,json}]
indent_style = space
indent_size = 2

[*.{yml,yaml,toml}]
indent_style = space
indent_size = 2

[*.{md}]
indent_style = space
indent_size = 2

[nginx.conf]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

